         </div>
         <div class="mb-3">
            <label asp-for="Currency"></label>
            <select asp-for="Currency" class="form-control">
                <option>PLN</option>
            </select>
            <span asp-validation-for="Currency" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="createdDate"></label>
            <input asp-for="createdDate" class="form-control" disabled/>
        </div>
      
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="SalesOrdersHead" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

