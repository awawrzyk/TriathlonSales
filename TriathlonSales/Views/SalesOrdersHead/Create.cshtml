@model SalesOrdersHead


<form method="post">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Sales Order</h2>
        </div>
        <div class="mb-3">
            <label asp-for="docNo"></label>
            <input asp-for="docNo" class="form-control" value=@ViewBag.NextDocNo disabled style="width:100%;"/>
        </div>
        <div class="mb-3">
